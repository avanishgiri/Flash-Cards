<div class="container">
  <% unless @user %>
    <div class="hero-unit">

      <h1>Welcome to BARR Flashcards!</h1><br>

      <p>Test your knowledge by choosing a deck and playing a round, 
        or become a member and make a deck of your own flashcards!</p>

    </div>
    <div class="span4">

      <h3> Sign up! </h3>
      <form id='signup' action='/signup' method='post'>
        <input type='text' name='name' placeholder='Name'><br>
        <input type='email' name='email' placeholder='Email' required="required"><br>
        <input type='password' name='password' placeholder='Password'><br>
        <input class="submit" type='submit' value='Submit'>
      </form><br>

    </div>

    <div class="span4">
      <h3> Login! </h3>

      <form id='login' action='/login' method='post'>
        <input type='email' name='email' placeholder='Email' required="required"><br>
        <input type='password' name='password' placeholder='Password'><br>
        <input class="submit" type='submit' value="Submit"><br>
      </form><br>
    </div>

    <div class="span4">
        <h3> Instructions: </h3>        
        <p> 1) Do this </p>
        <p> 2) Do that </p>
        <p> 3) Do the other thing </p>
        <p> 4) Do another thing </p>
    </div>

  <% end %>

  <% if @user %> 
    <div class='hero-unit'>
      <% p @user%> 
      <h1> Welcome <%= @user %></h1>
      <h2> to your BARR Flashcards Profile Page </h2>

      <div class='span4' id='stats'>
        <h3> Here are the decks you've played so far: </h3>  
      </div>
    
      <div class='span4'>
        <h3> Create a deck of custom flashcards!</h3>
        <h4>Give your deck a name:</h4>
        <form action="/create_deck" name="title" method="post">
          <input type="text" name="title" placeholder="Deck title">
        <h4>What subject does it belong to?</h4>
        <form action="/create_deck" name="name" method="post">
          <input type="text" name="name" placeholder="Subject">
          <input class="submit" type="submit" value="Submit">
        </form>
      </div>

    </div>
  <% end %> 

</div>

